{
  "manifest_version": 2,
  "name": "E-FOS",
  "version": "1.0",
  "description": "ELTE Felhasználóbarát Offline Segéd",
  "icons": {
    "48": "assets/icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "E-FOS",
    "theme_icons": [{
      "light": "assets/icon_light.png",
      "dark": "assets/icon_dark.png"
    }]
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
