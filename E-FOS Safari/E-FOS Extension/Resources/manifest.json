{
  "manifest_version": 3,
  "name": "E-FOS",
  "version": "1.0",
  "description": "ELTE Felhasználóbarát Offline Segéd",
  "icons": {
    "48": "images/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "E-FOS"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://neptun.elte.hu/*",
    "https://canvas.elte.hu/*",
    "https://tms.inf.elte.hu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://neptun.elte.hu/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
